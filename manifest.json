{
  "name": "Plurico",
  "version": "0.1.3.3",
  "description": "A simple extension to view Nico videos inside Plurk",
  "icons": {"16": "icons/16.png", "32": "icons/32.png", "48": "icons/48.png", "128": "icons/128.png"},
  "background_page": "background.html",
  "page_action": {
    "default_icon": "icons/16.png",
    "default_title": "Plurico is activated."
  },
  "content_scripts": [
    {
      "matches": ["http://www.plurk.com/*"],
      "js": ["jquery-1.4.1.min.js", "jquery.listen-1.0.3-min.js", "jquery-ui-1.7.2.custom.min.js", "content.js"],
      "css": ["css/ui-lightness/jquery-ui-1.7.2.custom.absolute.css", "content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": ["tabs", "http://www.plurk.com/*", "http://ext.nicovideo.jp/*"]
}
